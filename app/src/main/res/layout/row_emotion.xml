<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/row_emotion_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/emotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/row_emotion_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_emotion_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/emotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/row_emotion_3"
        app:layout_constraintStart_toEndOf="@id/row_emotion_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_emotion_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/emotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/row_emotion_4"
        app:layout_constraintStart_toEndOf="@id/row_emotion_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/row_emotion_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/emotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_emotion_3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/row_emotion_divider_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_alpha_40"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/row_emotion_1"
        app:layout_constraintEnd_toEndOf="@id/row_emotion_1"
        app:layout_constraintStart_toStartOf="@id/row_emotion_1"
        app:layout_constraintTop_toTopOf="@id/row_emotion_1" />

    <View
        android:id="@+id/row_emotion_divider_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_alpha_40"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/row_emotion_2"
        app:layout_constraintEnd_toEndOf="@id/row_emotion_2"
        app:layout_constraintStart_toStartOf="@id/row_emotion_2"
        app:layout_constraintTop_toTopOf="@id/row_emotion_2" />

    <View
        android:id="@+id/row_emotion_divider_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_alpha_40"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/row_emotion_3"
        app:layout_constraintEnd_toEndOf="@id/row_emotion_3"
        app:layout_constraintStart_toStartOf="@id/row_emotion_3"
        app:layout_constraintTop_toTopOf="@id/row_emotion_3" />

    <View
        android:id="@+id/row_emotion_divider_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_alpha_40"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/row_emotion_4"
        app:layout_constraintEnd_toEndOf="@id/row_emotion_4"
        app:layout_constraintStart_toStartOf="@id/row_emotion_4"
        app:layout_constraintTop_toTopOf="@id/row_emotion_4" />

</androidx.constraintlayout.widget.ConstraintLayout>